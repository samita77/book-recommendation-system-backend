<%- include('../../partials/admin_header') %>

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Manage Editions</h1>

    <div class="flex justify-end mb-4">
        <a href="/admin/editions/new" class="bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
            Add New Edition
        </a>
    </div>

    <% if (editions.length > 0) { %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full bg-white">
                <thead class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
                    <tr>
                        <th class="py-3 px-6 text-left">ID</th>
                        <th class="py-3 px-6 text-left">Book ID</th>
                        <th class="py-3 px-6 text-left">Format</th>
                        <th class="py-3 px-6 text-left">Publisher</th>
                        <th class="py-3 px-6 text-left">Slug</th>
                        <th class="py-3 px-6 text-center">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 text-sm font-light">
                    <% editions.forEach(edition => { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-100">
                            <td class="py-3 px-6 text-left whitespace-nowrap"><%= edition.id %></td>
                            <td class="py-3 px-6 text-left"><%= edition.bookId %></td>
                            <td class="py-3 px-6 text-left"><%= edition.format %></td>
                            <td class="py-3 px-6 text-left"><%= edition.publisher %></td>
                            <td class="py-3 px-6 text-left"><%= edition.slug || 'N/A' %></td>
                            <td class="py-3 px-6 text-center">
                                <div class="flex item-center justify-center">
                                    <a href="/admin/editions/edit/<%= edition.slug %>" class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.5L15.232 5.232z" />
                                        </svg>
                                    </a>
                                    <form action="/admin/editions/delete/<%= edition.slug %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this edition?');">
                                        <button type="submit" class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <p class="text-gray-600">No editions found.</p>
    <% } %>
</div>

<%- include('../../partials/admin_footer') %>
