<%- include('../../partials/admin_header') %>

<div class="container mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Edit Edition</h1>

    <form action="/admin/editions/edit/<%= edition._id %>" method="POST" class="bg-white p-6 rounded-lg shadow-md">
        <div class="mb-4">
            <label for="id" class="block text-gray-700 text-sm font-bold mb-2">ID:</label>
            <input type="number" id="id" name="id" value="<%= edition.id || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" readonly disabled>
        </div>
        <div class="mb-4">
            <label for="bookId" class="block text-gray-700 text-sm font-bold mb-2">Book ID:</label>
            <input type="number" id="bookId" name="bookId" value="<%= edition.bookId || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" required>
        </div>
        <div class="mb-4">
            <label for="format" class="block text-gray-700 text-sm font-bold mb-2">Format:</label>
            <input type="text" id="format" name="format" value="<%= edition.format || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-4">
            <label for="year" class="block text-gray-700 text-sm font-bold mb-2">Year:</label>
            <input type="text" id="year" name="year" value="<%= edition.year || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-4">
            <label for="publisher" class="block text-gray-700 text-sm font-bold mb-2">Publisher:</label>
            <select id="publisher" name="publisher" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
                <option value="">Select a Publisher</option>
                <% publishers.forEach(publisher => { %>
                    <option value="<%= publisher.name %>" <%= edition.publisher == publisher.name ? 'selected' : '' %>><%= publisher.name %></option>
                <% }); %>
            </select>
        </div>
        </div>
        <div class="mb-4">
            <label for="ISBN" class="block text-gray-700 text-sm font-bold mb-2">ISBN:</label>
            <input type="text" id="ISBN" name="ISBN" value="<%= edition.ISBN || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-4">
            <label for="asin" class="block text-gray-700 text-sm font-bold mb-2">ASIN:</label>
            <input type="text" id="asin" name="asin" value="<%= edition.asin || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-4">
            <label for="language" class="block text-gray-700 text-sm font-bold mb-2">Language:</label>
            <input type="text" id="language" name="language" value="<%= edition.language || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="mb-4">
            <label for="pages" class="block text-gray-700 text-sm font-bold mb-2">Pages:</label>
            <input type="number" id="pages" name="pages" value="<%= edition.pages || '' %>" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
        </div>
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">
                Update Edition
            </button>
            <a href="/admin/editions" class="inline-block align-baseline font-bold text-sm text-blue-500 hover:text-blue-800">Cancel</a>
        </div>
    </form>
</div>

<%- include('../../partials/admin_footer') %>
